<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txvNom"
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="22dp" />

            <!-- android:textColor="@color/purple_500"-->
            <TextView
                android:id="@+id/txvPresentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Presentacion"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txvAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Alias"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txvDosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Dosis"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txvFrecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Frecuencia"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txvPeriodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Periodo"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txvHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="Hora"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnElim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Eliminar" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"/>

</LinearLayout>